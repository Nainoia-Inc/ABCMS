{
    "name": "nainoiainc/abcms",
    "description": "A Basic Content Management System",
    "type": "project",
    "license": "CC-BY-4.0",
    "autoload": {
        "psr-4": {
            "Nainoiainc\\Abcms\\": "src/"
        }
    },
    "authors": [
        {
            "name": "NainoiaInc",
            "email": "nainoia-inc@signedon.net",
            "homepage": "https://nainoia-inc.signedon.net"
        }
    ],
    "minimum-stability": "dev",
    "require": {
		"php": ">=8.2",
		"composer/installers": "~2.0"
	},
	"extra": {
		"installer-paths": {
			"custom-plugins/{$name}/": ["type:abcms-plugin"]
		}
	}
    "scripts": {
        "post-update-cmd": [
			"wget -N 'https://raw.githubusercontent.com/Nainoia-Inc/ABCMS/refs/heads/master/composer.json'",
			"cd ABCMS; wget -N 'https://raw.githubusercontent.com/Nainoia-Inc/ABCMS/refs/heads/master/ABCMS/.htaccess'",
			"cd ABCMS; wget -N 'https://raw.githubusercontent.com/Nainoia-Inc/ABCMS/refs/heads/master/ABCMS/index.php'"
		]
    }
}
